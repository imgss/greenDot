doctype html
html
  head
    link(title="greenDot" href="/img/icon.png" rel="icon")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet" href="css/preloader.css")
    link(rel="stylesheet" href="css/style.css")
    title greenDot
    script(src='/js/Chart.min.js')
    script(src='//cdn.bootcss.com/jquery/3.1.1/jquery.min.js')
    script(src='https://cdn.bootcss.com/bootstrap/3.1.0/js/dropdown.min.js')
  body
  div.container(style='padding:5px; background-color:rgba(0,0,0,0.8);')
    div.row
      div.col-lg-6
        span(style='color:#6cc644; font-size:2em') GreenDot
        span(id='pk') 
          em PK with someone
      form(class='form-inline col-lg-6')
        div.input-group#single
          label(class="sr-only" for="user") 搜索用户
          input(id='user' type='text' placeholder='请输入你的GitHub ID' class='form-control')
          div.input-group-btn
            button(id='year' type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" )
              span 选择年
              span.caret
            ul.dropdown-menu
              li 2017
              li 2016
          div.input-group-btn
            button(id='ajax' type="button" class="btn btn-default") ajax提交
            button(id='newpage' type="button" class="btn btn-default") 刷新提交
        div.input-group#vs
          label(class="sr-only" for="user") 搜索用户
          input(id='user1' type='text' placeholder='a的GitHub ID' class='form-control')
          span.input-group-addon vs
          input(id='user2' type='text' placeholder='b的GitHub ID' class='form-control')
          span.input-group-btn
            button(id='go' type="button" class="btn btn-default") go!
  div.container
    div#userinfo.row
    div#users.row
      div.col-lg-6
      div.col-lg-6
    div#container.row
  div#preloader5
  script(src='/js/getUserInfo.js')
  script(src='/js/mychart.js')
  script(src='/js/page.js')
  script.
    document.querySelector('#newpage').addEventListener('click',function(){
      var input=document.querySelector('#user');
      if (!input.value){
        input.focus();
        return false;
      }
      var user=input.value;
      window.location.href+='user/'+user;//转到localhost:3000/user/id
    })